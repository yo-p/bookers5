<div class="row">
  <div class="col-md-3">
    <%= render partial: "books/form", locals: { book: @new_book, user: @user} %>
  </div>
  <div class="col-md-9">
    <h1>Book detail</h1>
    <table class="table table-hover">
      <tr>
        <td>
          <%= link_to user_path(@book.user) do %>
            <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: 'no-image-mini.jpg', size: '60x60' %>
            <%= @book.user.name %>
          <% end %>
        </td>
        <td><%= link_to @book.title, book_path(@book) %></td>
        <td><%= @book.body %></td>
        <td></td>
        <% if user_signed_in? && current_user.id == @book.user_id %>
          <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-success" %></td>
          <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, class: "btn btn-danger" %></td>
        <% end %>
          <td>
            <% if current_user.already_liked?(@book) %>
              <%= button_to 'Unlike', book_like_path(@book), method: :delete %>
            <% else %>
              <%= button_to 'Like', book_likes_path(@book), method: :post %>
            <% end %>
            <%= @book.liked_users.count %>
          </td>
      </tr>
    </table>

    <%= form_with model: [@book, @comment], local: true do |f| %>
      <div class="form-group">
        <%= f.text_area :content, class: 'form-control', id: 'content', placeholder: "コメントを記入してください" %>
      </div>
      <%= f.submit "Create Comment", class: "btn btn-primary action" %>
    <% end %>

    
    <table class="table table-striped">
      <thead>
        <tr>
          <th>name</th>
          <th>comment</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.user.name %></td>
          <td><%= comment.content %></td>
          <td><%= link_to 'Destroy', book_comment_path(@book, comment.id), method: :delete, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
      
  </div>
</div>
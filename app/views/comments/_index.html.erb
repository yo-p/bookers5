<table class="table table-hover">
  <thead>
    <tr>
      <th>name</th>
      <th>comment</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% comments.each do |comment| %>
      <tr>
        <td><%= comment.user.name %></td>
        <td><%= comment.content %></td>
        <% if current_user == comment.user %>
          <td><%= link_to 'Destroy', book_comment_path(comment.book_id, comment.id), method: :delete, remote: true, class: "btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
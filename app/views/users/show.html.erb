<p id="notice">
  <%= notice %>
</p>
<%= render partial: "users/contact", locals: { user: @user, isRoom: @isRoom ,roomId: @roomId, entry: @entry } %>

<div class="row">
  <div class="col-md-3">
    <%= render partial: "books/form", locals: { book: @book, user: @user} %>
  </div>

  <div class="col-md-9">
    <h1>Books</h1>
    <table class="table table-hover">
      <tr>
        <th>image</th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: 'no-image-mini.jpg', size: '60x60' %></td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

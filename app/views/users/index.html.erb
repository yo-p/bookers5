<h1>Users</h1>

<table>
  <tr>
    <th>image</th>
    <th>name</th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: 'no-image-mini.jpg', size: '60x60' %></td>
    <td><%= user.name %></td>
    <td><%= link_to 'show', user_path(user) %></td>
  </tr>
  <% end %>

</table>
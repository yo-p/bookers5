<div class="row">
  <div class="col-md-12">
    <h1>followings</h1>
    <table class="table table-hover">
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
      <% @followings.each do |following| %>
      <tr>
        <td><%= attachment_image_tag following, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: 'no-image-mini.jpg', size: '60x60' %></td>
        <td><%= following.name %></td>
        <td><%= link_to 'Show', user_path(following) %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
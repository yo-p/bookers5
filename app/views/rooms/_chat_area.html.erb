
    <% if message.present? %>
      <% messages.each do |m| %>
        <div class="chat-box">
          <% if m.user_id == current_user.id %>
            <div class="chat-face">
              <%= attachment_image_tag m.user, :profile_image, :fill, 60, 60, fromat: 'jpeg', fallback: 'no-image-mini.jpg',size: '60x60'%>
            </div>
            <div class="chat-area">
              <div class="chat-hukidasi">
                <p><%= m.message %></p><br>
                <p><%= m.created_at.strftime("%Y-%m-%d %H:%M") %></p>
              </div>
            </div>
        </div>
        <% else %>
          <div class="chat-box">
            <% user = User.find_by(id: m.user_id) %>
            <div class="chat-face">
              <%= attachment_image_tag m.user, :profile_image, :fill, 60, 60, fromat: 'jpeg', fallback: 'no-image-mini.jpg',size: '60x60'%>
            </div>
            <div class="chat-area">
              <div class="chat-hukidasi someone">
                <strong><%= m.message %></strong><br>
                <p><%= m.created_at.strftime("%Y-%m-%d %H:%M") %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
